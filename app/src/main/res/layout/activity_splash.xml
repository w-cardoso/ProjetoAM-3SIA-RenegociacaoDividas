<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color4"
    tools:context="renegociacao.moosegroup.com.br.renegociardividas.Ui.splash.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logo_renegociar"
        android:id="@+id/imageView" />

    <TextView
        android:text="Divida Zero"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#133E68"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:textColor="#133E68"
        android:id="@+id/splash_txtTRF5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MooseGroup Renegociação de Dividas"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
